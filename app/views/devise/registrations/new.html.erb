<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card mt-5">
        <div class="card-header">
          <h3 class="mb-0">Registrarse</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.text_field :first_name, autofocus: true, class: "form-control mb-3", placeholder: "Primer  nombre" %>
            <%= f.text_field :second_name, autofocus: true, class: "form-control mb-3", placeholder: "Segundo nombre" %>
            <%= f.text_field :last_name, class: "form-control mb-3", placeholder: "Primer apellido" %>
            <%= f.text_field :last_name1, class: "form-control mb-3", placeholder: "Segundo apellido" %>
            <%= f.text_field :identification, class: "form-control mb-3", placeholder: "Tarjeta de identidad" %>
            <%= f.text_field :address, class: "form-control mb-3", placeholder: "Direccion" %>
            <%= f.email_field :email, autofocus: true, class: "form-control mb-3", placeholder: "Email" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3", placeholder: "ContraseÃ±a" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3", placeholder: "Confirmar contraseÃ±a" %>
            <%= f.submit "Registrarse", class: "btn btn-primary btn-block" %>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

